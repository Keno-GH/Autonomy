<Defs>

    <!-- Firefighting Average Movespeed Priority Giver -->
    <Autonomy.PriorityGiverDef>
        <defName>FirefightingMovespeedPriority</defName>
        <label>Firefighting movespeed priority</label>
        <description>Adjusts firefighting work priority based on pawn's movespeed</description>
        <isUrgent>true</isUrgent>
        
        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>MovespeedInfoGiver</infoDefName>
                <calculation>Flat</calculation>
                <infoRange>-999~999</infoRange>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>true</requestIndividualData>
                <requestDistanceFromGlobal>true</requestDistanceFromGlobal>
            </li>
			<li>
				<type>personalityOffset</type>
				<personalityDefName>Rimpsyche_Competitiveness</personalityDefName>
				<personalityMultipliers>
					<li>
						<personalityRange>-1.0~-0.5</personalityRange>
						<multiplier>0.75</multiplier>
					</li>
					<li>
						<personalityRange>-0.49~0.0</personalityRange>
						<multiplier>0.9</multiplier>
					</li>
					<li>
						<personalityRange>0.01~0.5</personalityRange>
						<multiplier>1.25</multiplier>
					</li>
					<li>
						<personalityRange>0.51~1.0</personalityRange>
						<multiplier>1.5</multiplier>
					</li>
				</personalityMultipliers>
			</li>
            
        </conditions>
        
        <priorityRanges>
            <li>
                <validRange>-999~0</validRange>
                <priority>-5</priority>
                <description>I'm below average at movespeed</description>
            </li>
            <li>
                <validRange>0.01~999</validRange>
                <priority>5</priority>
                <description>I'm above average at movespeed</description>
            </li>
        </priorityRanges>
        
        <targetWorkGivers>
            <li>FightFires</li>
        </targetWorkGivers>
    </Autonomy.PriorityGiverDef>

    <!-- Fires in home area InfoGiver -->
    <Autonomy.InfoGiverDef>
        <defName>FiresInHomeArea</defName>
        <label>Fires in home area</label>
        <description>Counts the number of fires in the home area for urgent firefighting priority</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>true</isUrgent>
        <sourceType>itemCount</sourceType>
        
        <targetThingClasses>
            <li>Fire</li>
        </targetThingClasses>
        
        <filters>
            <homeAreaOnly>true</homeAreaOnly>
        </filters>
    </Autonomy.InfoGiverDef>

