<Defs>   
   
    <!-- Infogiver that counts the unforbidden things with a deterioration rate that are 
    outside and not in a container -->

    <Autonomy.InfoGiverDef>
        <defName>OutsideDeteriorablesInfoGiver</defName>
        <label>Deteriorating Items</label>
        <description>Counts stacks of deteriorable, unforbidden items left outside in the open.</description>
        <sourceType>itemCount</sourceType>
        <calculation>Sum</calculation>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>false</isIndividualizable>

        <targetCategories>
            <li>Root</li>
        </targetCategories>

        <filters>
            <includeThingFilters>
                <li>
                    <li>Deteriorable</li>
                    <li>Outside</li>
                </li>
            </includeThingFilters>
            <excludeThingFilters>
                <li>
                    <li>Forbidden</li>
                </li>
                <li>
                    <li>InContainer</li>
                </li>
            </excludeThingFilters>
        </filters>

    </Autonomy.InfoGiverDef>

    <!-- Fires in home area InfoGiver -->
    <Autonomy.InfoGiverDef>
        <defName>FiresInHomeArea</defName>
        <label>Fires in home area</label>
        <description>Counts the number of fires in the home area for urgent firefighting priority</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>true</isUrgent>
        <sourceType>itemCount</sourceType>
        
        <targetThingClasses>
            <li>Fire</li>
        </targetThingClasses>
        <filters>
            <includeThingFilters>
                <li>
                    <li>HomeArea</li>
                </li>
            </includeThingFilters>
        </filters>

    </Autonomy.InfoGiverDef>

    <!-- Filth Count InfoGiver -->
    <Autonomy.InfoGiverDef>
        <defName>FilthCount</defName>
        <label>Filth in current home area</label>
        <description>Tracks the amount of filth in the home area. Can be localizable for each pawn's current room.</description>
        <isLocalizable>true</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>itemCount</sourceType>
        
        <targetThingClasses>
            <li>Filth</li>
        </targetThingClasses>

        <filters>
            <includeThingFilters>
                <li>
                    <li>HomeArea</li>
                </li>
            </includeThingFilters>
        </filters>

    </Autonomy.InfoGiverDef>

    <!-- Filth Count Indoors InfoGiver -->
    <Autonomy.InfoGiverDef>
        <defName>FilthCountIndoors</defName>
        <label>Filth indoors</label>
        <description>Tracks the amount of filth indoors.</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>itemCount</sourceType>
        
        <targetThingClasses>
            <li>Filth</li>
        </targetThingClasses>

        <filters>
            <includeThingFilters>
                <li>
                    <li>HomeArea</li>
                </li>
            </includeThingFilters>
            <excludeThingFilters>
                <li>
                    <li>Outdoors</li>
                </li>
            </excludeThingFilters>
        </filters>

    </Autonomy.InfoGiverDef>

    <!-- Raw food count -->
    <Autonomy.InfoGiverDef>
        <defName>RawFoodCount</defName>
        <label>Raw food count</label>
        <description>Tracks the total count of raw food items in the colony storage areas.</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Sum</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>itemCount</sourceType>
        
        <targetCategories>
            <li>FoodRaw</li>
        </targetCategories>

        <filters>
            <includeThingFilters>
                <li>
                    <li>InStorage</li>
                </li>
                <li>
                    <li>inStockpile</li>
                </li>
            </includeThingFilters>
        </filters>

    </Autonomy.InfoGiverDef>
</Defs>