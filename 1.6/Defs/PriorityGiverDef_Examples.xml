<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Example PriorityGiverDef: Cooking when food is low -->
	<Autonomy.PriorityGiverDef>
		<defName>CookWhenFoodLow</defName>
		<label>Cook when food is low</label>
		<description>Increases cooking priority when the colony is running low on meals</description>
		
		<!-- Conditions that determine when this priority giver activates -->
		<conditions>
			<li>
				<type>mapStat</type>
				<name>MealCount</name>
				<calculation>flat</calculation>
				<flatValue>10</flatValue>
				<infoDefName>ColonyMealCounter</infoDefName>
			</li>
		</conditions>
		
		<!-- Personality-based modifications -->
		<personalityOffsets>
			<li>
				<name>Neurotic</name>
				<offset>x1.5</offset>
			</li>
			<li>
				<name>Lazy</name>
				<offset>-2</offset>
			</li>
		</personalityOffsets>
		
		<!-- How condition results map to priority changes -->
		<priorityRanges>
			<li>
				<validRange>0~5</validRange>
				<priority>3~4</priority>
				<description>Critical food shortage - high cooking priority</description>
			</li>
			<li>
				<validRange>6~10</validRange>
				<priority>1~2</priority>
				<description>Low food supplies - moderate cooking priority</description>
			</li>
			<li>
				<validRange>11~20</validRange>
				<priority>0~1</priority>
				<description>Adequate food - slight cooking priority</description>
			</li>
		</priorityRanges>
		
		<!-- Target specific work types -->
		<targetWorkTypes>
			<li>Cooking</li>
		</targetWorkTypes>
		
		<!-- Optional: Target specific work givers instead -->
		<!-- <targetWorkGivers>
			<li>CookMeals</li>
			<li>CookMealsCampfire</li>
		</targetWorkGivers> -->
	</Autonomy.PriorityGiverDef>

	<!-- Example: Mining when stone blocks are needed -->
	<Autonomy.PriorityGiverDef>
		<defName>MineWhenStoneNeeded</defName>
		<label>Mine when stone blocks needed</label>
		<description>Increases mining priority when construction projects need stone blocks</description>
		
		<conditions>
			<li>
				<type>infoGiver</type>
				<infoDefName>StoneBlockDemand</infoDefName>
				<calculation>bestOf</calculation>
			</li>
		</conditions>
		
		<personalityOffsets>
			<li>
				<name>Industrious</name>
				<offset>+1</offset>
			</li>
			<li>
				<name>Slothful</name>
				<offset>x0.7</offset>
			</li>
		</personalityOffsets>
		
		<priorityRanges>
			<li>
				<validRange>50~100</validRange>
				<priority>3</priority>
				<description>High stone demand - prioritize mining</description>
			</li>
			<li>
				<validRange>20~49</validRange>
				<priority>2</priority>
				<description>Moderate stone demand</description>
			</li>
			<li>
				<validRange>1~19</validRange>
				<priority>1</priority>
				<description>Some stone needed</description>
			</li>
		</priorityRanges>
		
		<targetWorkTypes>
			<li>Mining</li>
		</targetWorkTypes>
	</Autonomy.PriorityGiverDef>

	<!-- Example: Medical when colonists are injured -->
	<Autonomy.PriorityGiverDef>
		<defName>TendWhenInjured</defName>
		<label>Tend when colonists injured</label>
		<description>Increases medical priority based on injured colonist count and severity</description>
		
		<conditions>
			<li>
				<type>infoGiver</type>
				<infoDefName>InjuredColonistCount</infoDefName>
				<calculation>average</calculation>
			</li>
		</conditions>
		
		<personalityOffsets>
			<li>
				<name>Caring</name>
				<offset>x2.0</offset>
			</li>
			<li>
				<name>Psychopath</name>
				<offset>x0.3</offset>
			</li>
			<li>
				<name>Doctor</name>
				<offset>+2</offset>
			</li>
		</personalityOffsets>
		
		<priorityRanges>
			<li>
				<validRange>3~10</validRange>
				<priority>4</priority>
				<description>Multiple injured colonists - medical emergency</description>
			</li>
			<li>
				<validRange>1~2</validRange>
				<priority>2~3</priority>
				<description>Some colonists need medical attention</description>
			</li>
		</priorityRanges>
		
		<targetWorkTypes>
			<li>Doctor</li>
		</targetWorkTypes>
	</Autonomy.PriorityGiverDef>

	<!-- Example: Research based on pawn's intellectual skill -->
	<Autonomy.PriorityGiverDef>
		<defName>ResearchByIntellect</defName>
		<label>Research priority by intellect</label>
		<description>Adjusts research priority based on pawn's intellectual skill</description>
		
		<conditions>
			<li>
				<type>stat</type>
				<stat>Intellectual</stat>
				<calculation>flat</calculation>
				<flatValue>8</flatValue>
			</li>
		</conditions>
		
		<personalityOffsets>
			<li>
				<name>Intellectual</name>
				<offset>+3</offset>
			</li>
			<li>
				<name>AntiIntellectual</name>
				<offset>-4</offset>
			</li>
		</personalityOffsets>
		
		<priorityRanges>
			<li>
				<validRange>12~20</validRange>
				<priority>3~4</priority>
				<description>High intellect - excellent researcher</description>
			</li>
			<li>
				<validRange>8~11</validRange>
				<priority>2</priority>
				<description>Good intellect - capable researcher</description>
			</li>
			<li>
				<validRange>4~7</validRange>
				<priority>1</priority>
				<description>Average intellect - basic research</description>
			</li>
			<li>
				<validRange>0~3</validRange>
				<priority>0</priority>
				<description>Low intellect - avoid research</description>
			</li>
		</priorityRanges>
		
		<targetWorkTypes>
			<li>Research</li>
		</targetWorkTypes>
	</Autonomy.PriorityGiverDef>
</Defs>