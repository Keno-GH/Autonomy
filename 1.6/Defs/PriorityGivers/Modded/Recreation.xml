<Defs>

    <!-- InfoGiver for Personal Joy/Recreation Need -->
    <Autonomy.InfoGiverDef MayRequire="yefreitor.recreationworktype">
        <defName>PersonalJoyNeed</defName>
        <label>Personal recreation need</label>
        <description>Tracks each colonist's joy/recreation need individually so pawns know when to seek recreation.</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>true</isIndividualizable>
        <calculation>Avg</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>pawnNeed</sourceType>
        <targetNeed>Joy</targetNeed>

        <filters>
            <include>
                <li>player</li>
            </include>
            <exclude>
                <li>dead</li>
                <li>downed</li>
            </exclude>
        </filters>
    </Autonomy.InfoGiverDef>

    <!-- Priority Giver: Personal Recreation Need -->
    <Autonomy.PriorityGiverDef MayRequire="yefreitor.recreationworktype">
        <defName>RecreationPersonalJoy</defName>
        <label>Recreation by personal joy</label>
        <description>Prioritizes recreation work based on the pawn's personal joy/recreation level.</description>
        <isUrgent>false</isUrgent>

        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>PersonalJoyNeed</infoDefName>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>true</requestIndividualData>
                <requestNormalizedDistance>false</requestNormalizedDistance>
            </li>
            <!-- Playful pawns are more drawn to recreation activities -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Playfulness</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.7</multiplier>
                        <flat>-2</flat>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.85</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.15</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.3</multiplier>
                        <flat>2</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Diligent pawns are less likely to prioritize recreation -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Diligence</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>1.2</multiplier>
                        <flat>2</flat>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>1.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>0.75</multiplier>
                        <flat>-2</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Spontaneous/impulsive pawns are more likely to take breaks for fun -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Spontaneity</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.8</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.2</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Laid-back pawns prioritize fun more than high-strung ones -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Tension</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>1.15</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>1.05</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>0.95</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>0.85</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
        </conditions>

        <priorityRanges>
            <li>
                <validRange>0.01~0.14</validRange>
                <priority>10~15</priority>
                <description>I desperately need recreation now!</description>
            </li>
            <li>
                <validRange>0.15~0.29</validRange>
                <priority>7~10</priority>
                <description>I really need some fun and relaxation</description>
            </li>
            <li>
                <validRange>0.3~0.49</validRange>
                <priority>4~7</priority>
                <description>Some recreation would be nice soon</description>
            </li>
            <li>
                <validRange>0.5~0.69</validRange>
                <priority>1~4</priority>
                <description>I could use a bit of recreation</description>
            </li>
            <li>
                <validRange>0.7~0.89</validRange>
                <priority>-2~1</priority>
                <description>I'm satisfied with my recreation level</description>
            </li>
            <li>
                <validRange>0.9~1.0</validRange>
                <priority>-5~-2</priority>
                <description>I've had plenty of fun lately</description>
            </li>
        </priorityRanges>

        <targetWorkGivers>
            <li>RWT_Recreation</li>
        </targetWorkGivers>

    </Autonomy.PriorityGiverDef>

</Defs>