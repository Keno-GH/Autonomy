<Defs>

    <!-- Childcare Priority Giver based on Negotiation Ability -->
    <Autonomy.PriorityGiverDef>
        <defName>ChildcareTeachingPriorityGiver</defName>
        <label>Teach Children by Negotiation Ability</label>
        <description>Prioritizes childcare teaching workgivers based on competitive, normalized Negotiation Ability stat and personality traits suited for working with children.</description>
        <isUrgent>false</isUrgent>

        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>NegotiationAbilityInfoGiver</infoDefName>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>true</requestIndividualData>
                <requestNormalizedDistance>true</requestNormalizedDistance>
            </li>
            <!-- Compassionate people are naturally drawn to caring for children -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Compassion</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.5</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.8</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.3</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.5</multiplier>
                        <flat>3</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Sociable people enjoy engaging with children -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Sociability</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.6</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.85</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.2</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.35</multiplier>
                        <flat>2</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Patient (laid-back) people handle children better than high-strung ones -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Tension</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>1.3</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>1.15</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>0.85</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>0.7</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Playful people connect better with children -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Playfulness</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.7</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.2</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.4</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Diligent people take teaching seriously -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Diligence</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.75</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.15</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.25</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Optimistic people provide better guidance for children -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Optimism</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.8</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.2</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
        </conditions>

        <priorityRanges>
            <li>
                <validRange>-1~-0.6</validRange>
                <priority>-10~-7</priority>
                <description>I struggle to connect with children</description>
            </li>
            <li>
                <validRange>-0.6~-0.3</validRange>
                <priority>-7~-3</priority>
                <description>Children don't respond well to me</description>
            </li>
            <li>
                <validRange>-0.3~0.0</validRange>
                <priority>-3~0</priority>
                <description>I'm not great with the young ones</description>
            </li>
            <li>
                <validRange>0.0~0.3</validRange>
                <priority>0~3</priority>
                <description>I feel fit to take care of the young</description>
            </li>
            <li> 
                <validRange>0.3~0.6</validRange>
                <priority>3~5</priority>
                <description>I'm good at guiding children</description>
            </li>
            <li>
                <validRange>0.6~1.0</validRange>
                <priority>5~5</priority>
                <description>I have a natural way with children</description>
            </li>
        </priorityRanges>

        <targetWorkGivers>
            <li>ChildcarerTeach</li>
        </targetWorkGivers>

    </Autonomy.PriorityGiverDef>

</Defs>
