<Defs>

    <!-- Infogiver for MiningYield stat, avg and individualizable -->
    <Autonomy.InfoGiverDef>
        <defName>MiningYieldInfoGiver</defName>
        <label>Mining yield</label>
        <description>Tracks each pawn's ore yield so our best miners lead the digs.</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>true</isIndividualizable>
        <calculation>Avg</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>pawnStat</sourceType>
        <targetStat>MiningYield</targetStat>

        <filters>
            <include>
                <li>player</li>
            </include>
            <exclude>
                <li>dead</li>
                <li>downed</li>
            </exclude>
        </filters>
    </Autonomy.InfoGiverDef>

    <!-- Prioritygiver for Mine and Drill workgivers using 
    MiningYield competitive normalized infogiver, with range
    from -1 to 1, and a result from -5 to 10, with 0 at range 0,
    with 4 to 6 steps -->
    <Autonomy.PriorityGiverDef>
        <defName>MineDrillYieldPriorityGiver</defName>
        <label>Mine by Mining Yield</label>
        <description>Prioritizes mining workgivers by competitive, normalized Mining Yield stat</description>
        <isUrgent>false</isUrgent>

        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>MiningYieldInfoGiver</infoDefName>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>true</requestIndividualData>
                <requestNormalizedDistance>true</requestNormalizedDistance>
            </li>
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Diligence</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.75</multiplier>
                        <flat>-2</flat>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.25</multiplier>
                        <flat>2</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Tenacity</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.78</multiplier>
                        <flat>-2</flat>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.9</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.25</multiplier>
                        <flat>2</flat>
                    </li>
                </personalityMultipliers>
            </li>
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Competitiveness</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~-0.5</personalityRange>
                        <multiplier>0.8</multiplier>
                    </li>
                    <li>
                        <personalityRange>-0.49~0.0</personalityRange>
                        <multiplier>0.92</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.01~0.5</personalityRange>
                        <multiplier>1.08</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.51~1.0</personalityRange>
                        <multiplier>1.22</multiplier>
                        <flat>1</flat>
                    </li>
                </personalityMultipliers>
            </li>
        </conditions>

        <priorityRanges>
            <li>
                <validRange>-1~-0.6</validRange>
                <priority>-10~-6</priority>
                <description>I'm among the worst miners</description>
            </li>
            <li>
                <validRange>-0.6~-0.3</validRange>
                <priority>-6~-3</priority>
                <description>I'm below average compared to other miners</description>
            </li>
            <li>
                <validRange>-0.3~0.0</validRange>
                <priority>-3~0</priority>
                <description>I'm about average compared to the rest</description>
            </li>
            <li>
                <validRange>0.0~0.3</validRange>
                <priority>0~3</priority>
                <description>I'm a bit better than average at mining</description>
            </li>
            <li>
                <validRange>0.3~0.6</validRange>
                <priority>3~4</priority>
                <description>I'm above average compared to other miners</description>
            </li>
            <li>
                <validRange>0.6~1.0</validRange>
                <priority>4~4</priority>
               <description>I'm one of the best miners around</description>
            </li>
        </priorityRanges>

        <targetWorkGivers>
            <li>Mine</li>
            <li>Drill</li>
        </targetWorkGivers>

    </Autonomy.PriorityGiverDef>

</Defs>