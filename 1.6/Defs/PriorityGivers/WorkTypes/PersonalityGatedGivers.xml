<Defs>

    <!-- This file will have all the prioritygivers that will only return anything if 
    a pawn has a specific personality value. It includes givers about future planning 
    and management, as well as offsets meant only for specific personality types, like
    organized pawns having an always on positive offset for hauling and cleaning. -->

    <!-- Prioritygivers for food producing workgivers depending on the amount of food in 
    stockpile against the amount of food eaten per day. Only for the following personalities
    * Rimpsyche_Tension if above 0.75 (High-strung), with a 1.05 multiplier
    * Rimpsyche_Organization if above 0.75, with a 1.25 multiplier 
    * Rimpsyche_Compassion if above 0.75, with a 1.25 multiplier 
    The way this PriorityGiver will work is using a calculation infogiver with
     -->

    <Autonomy.PriorityGiverDef>
        <defName>FoodSecurity</defName>
        <label>Food Security</label>
        <description>Prioritizes food production (cooking, growing, butchering) based on the number of days of food remaining in storage.</description>
        <isUrgent>true</isUrgent>

        <conditions>
            <li>
                <type>calculation</type>
                <infoDefName1>StoredNutrition</infoDefName1>
                <infoDefName2>ColonistFoodNeedFallRate</infoDefName2>
                <operation>ratio</operation>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>false</requestIndividualData>
                <requestDistanceFromGlobal>false</requestDistanceFromGlobal>
            </li>
            <!-- Rimpsyche_Tension if above 0.75 (High-strung), with a 1.05 multiplier -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Tension</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~0.75</personalityRange>
                        <multiplier>1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.76~1.0</personalityRange>
                        <multiplier>2</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Rimpsyche_Organization if above 0.75, with a 1.25 multiplier -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Organization</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~0.49</personalityRange>
                        <multiplier>0</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.5~0.59</personalityRange>
                        <multiplier>0.1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.6~0.69</personalityRange>
                        <multiplier>0.25</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.7~0.75</personalityRange>
                        <multiplier>0.5</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.76~0.89</personalityRange>
                        <multiplier>0.75</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.9~1.0</personalityRange>
                        <multiplier>1</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
            <!-- Rimpsyche_Compassion if above 0.75, with a 1.25 multiplier -->
            <li>
                <type>personalityOffset</type>
                <personalityDefName>Rimpsyche_Compassion</personalityDefName>
                <personalityMultipliers>
                    <li>
                        <personalityRange>-1.0~0.75</personalityRange>
                        <multiplier>1</multiplier>
                    </li>
                    <li>
                        <personalityRange>0.76~1.0</personalityRange>
                        <multiplier>1.25</multiplier>
                    </li>
                </personalityMultipliers>
            </li>
        </conditions>   

        <priorityRanges>
            <li>
                <validRange>-999~1</validRange>
                <priority>10~7</priority>
                <description>We have less than a day worth of food</description>
            </li>
            <li>
                <validRange>1.01~3</validRange>
                <priority>7~5</priority>
                <description>Food reserves are dangerously low</description>
            </li>
            <li>
                <validRange>3.01~5</validRange>
                <priority>5~3</priority>
                <description>We need to stock up on food</description>
            </li>
            <li>
                <validRange>5.01~10</validRange>
                <priority>3~1</priority>
                <description>Food reserves are adequate</description>
            </li>
            <li>
                <validRange>10.01~20</validRange>
                <priority>1~0</priority>
                <description>We have plenty of food</description>
            </li>
            <li>
                <validRange>20.01~999</validRange>
                <priority>0~0</priority>
                <description>Food storage is overflowing</description>
            </li>
        </priorityRanges>

        <targetWorkGivers>
            <li>DoBillsCook</li>
            <li>DoBillsCookCampfire</li>
            <li>DoBillsButcherFlesh</li>
            <li>GrowerSow</li>
            <li>GrowerHarvest</li>
            <li>PlantsCut</li>
            <li>HunterHunt</li>
            <li>Fish</li>
        </targetWorkGivers>

    </Autonomy.PriorityGiverDef>
    

</Defs>