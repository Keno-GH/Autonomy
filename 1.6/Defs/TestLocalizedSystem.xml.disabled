<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Test InfoGiver: Room Filth Count (Localizable) -->
    <Autonomy.InfoGiverDef>
        <defName>TestRoomFilthCount</defName>
        <label>Room filth count</label>
        <description>Counts filth items per room for localized cleaning responses</description>
        <isLocalizable>true</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>itemCount</sourceType>
        <targetItems>
            <li>Filth_Dirt</li>
            <li>Filth_Blood</li>
            <li>Filth_Vomit</li>
            <li>Filth_AnimalFilth</li>
            <li>Filth_Trash</li>
        </targetItems>
    </Autonomy.InfoGiverDef>

    <!-- Test InfoGiver: Individual Pawn Mood (Individualizable) -->
    <Autonomy.InfoGiverDef>
        <defName>TestIndividualMood</defName>
        <label>Individual pawn mood</label>
        <description>Tracks each pawn's mood individually for personalized responses</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>true</isIndividualizable>
        <calculation>Avg</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>pawnNeed</sourceType>
        <targetNeed>Mood</targetNeed>
    </Autonomy.InfoGiverDef>

    <!-- Test InfoGiver: Individual Pawn Rest (Individualizable) -->
    <Autonomy.InfoGiverDef>
        <defName>TestIndividualRest</defName>
        <label>Individual pawn rest</label>
        <description>Tracks each pawn's rest level individually</description>
        <isLocalizable>false</isLocalizable>
        <isIndividualizable>true</isIndividualizable>
        <calculation>Avg</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>pawnNeed</sourceType>
        <targetNeed>Rest</targetNeed>
    </Autonomy.InfoGiverDef>

    <!-- Test InfoGiver: Room Colonist Count (Localizable) -->
    <Autonomy.InfoGiverDef>
        <defName>TestRoomColonistCount</defName>
        <label>Room colonist count</label>
        <description>Counts colonists per room for social interaction priorities</description>
        <isLocalizable>true</isLocalizable>
        <isIndividualizable>false</isIndividualizable>
        <calculation>Count</calculation>
        <isUrgent>false</isUrgent>
        <sourceType>pawnCount</sourceType>
        <filters>
            <include>
                <li>player</li>
            </include>
            <exclude>
                <li>downed</li>
                <li>dead</li>
            </exclude>
        </filters>
    </Autonomy.InfoGiverDef>

    <!-- Test PriorityGiver: Room-based Cleaning Priority -->
    <Autonomy.PriorityGiverDef>
        <defName>TestRoomCleaningPriority</defName>
        <label>Room-based cleaning priority</label>
        <description>Increases cleaning priority based on filth count in current room</description>
        
        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>TestRoomFilthCount</infoDefName>
                <calculation>Flat</calculation>
                <infoRange>0~20</infoRange>
                <requestLocalizedData>true</requestLocalizedData>
                <requestIndividualData>false</requestIndividualData>
                <requestDistanceFromGlobal>false</requestDistanceFromGlobal>
            </li>
        </conditions>
        
        <priorityRanges>
            <li>
                <validRange>0~1</validRange>
                <priority>1</priority>
                <description>Clean room - low priority</description>
            </li>
            <li>
                <validRange>2~5</validRange>
                <priority>3</priority>
                <description>Dirty room - high priority</description>
            </li>
            <li>
                <validRange>6~20</validRange>
                <priority>4</priority>
                <description>Very dirty room - urgent priority</description>
            </li>
        </priorityRanges>
        
        <targetWorkTypes>
            <li>Cleaning</li>
        </targetWorkTypes>
    </Autonomy.PriorityGiverDef>

    <!-- Test PriorityGiver: Individual Mood Response -->
    <Autonomy.PriorityGiverDef>
        <defName>TestIndividualMoodPriority</defName>
        <label>Individual mood response</label>
        <description>Adjusts work priority based on individual pawn's mood vs colony average</description>
        
        <conditions>
            <li>
                <type>infoGiver</type>
                <infoDefName>TestIndividualMood</infoDefName>
                <calculation>Flat</calculation>
                <infoRange>-1.0~1.0</infoRange>
                <requestLocalizedData>false</requestLocalizedData>
                <requestIndividualData>true</requestIndividualData>
                <requestDistanceFromGlobal>true</requestDistanceFromGlobal>
            </li>
        </conditions>
        
        <priorityRanges>
            <li>
                <validRange>-1.0~-0.2</validRange>
                <priority>1</priority>
                <description>Much worse mood than average - low priority</description>
            </li>
            <li>
                <validRange>-0.1~0.1</validRange>
                <priority>3</priority>
                <description>Average mood - normal priority</description>
            </li>
            <li>
                <validRange>0.2~1.0</validRange>
                <priority>4</priority>
                <description>Much better mood than average - high priority</description>
            </li>
        </priorityRanges>
        
        <targetWorkTypes>
            <li>Research</li>
        </targetWorkTypes>
    </Autonomy.PriorityGiverDef>
</Defs>