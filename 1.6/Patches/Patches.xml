<Patch>

    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>keno.autonomy</modId>
        <key>ToggleAutonomyButchering</key>
        <defaultValue>true</defaultValue>
        <caseTrue>
            <Operation Class="XmlExtensions.PatchOperationAddOrReplace">
                <xpath>Defs/WorkGiverDef[defName="DoBillsButcherFlesh"]</xpath>
                <value>
                    <workType>AutonomyButchering</workType>
                </value>
            </Operation>
        </caseTrue>
        <caseFalse>
            <Operation Class="XmlExtensions.PatchOperationAttributeAdd">
                <xpath>Defs/WorkTypeDef[defName="AutonomyButchering"]</xpath>
                <attribute>Abstract</attribute>
                <value>True</value>
            </Operation>
        </caseFalse>
    </Operation>

